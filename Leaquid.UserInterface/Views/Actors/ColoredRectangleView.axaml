<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:actors="clr-namespace:Leaquid.UserInterface.ViewModels.Actors"
             mc:Ignorable="d" 
             x:Class="Leaquid.UserInterface.Views.Actors.ColoredRectangleView"
             x:DataType="actors:ColoredRectangleViewModel">
    <Design.DataContext>
        <actors:DesignColoredRectangleViewModel />
    </Design.DataContext>
    <Rectangle
        Width="{Binding Bounds.Width}"
        Height="{Binding Bounds.Height}"
        Fill="{Binding Brush}"></Rectangle>
</UserControl>
