<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Leaquid.UserInterface.ViewModels"
             mc:Ignorable="d"
             x:Class="Leaquid.UserInterface.Views.LocalGameControlView"
             x:DataType="viewModels:LocalGameControlViewModel">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <Button Command="{Binding PreviousPlayer}">Previous Player</Button>
        <Button Command="{Binding NextPlayer}">Next Player</Button>
    </StackPanel>
</UserControl>
